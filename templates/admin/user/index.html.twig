{% extends 'admin/base.html.twig' %}

{% block content %}
<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">User Management</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Registered At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                        <span class="badge bg-primary">{{ role }}</span>
                        {% endfor %}
                    </td>
                    
                    
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}