{% extends 'base.html.twig' %}

{% block title %}About Swappa - Our Story & Values{% endblock %}

{% block body %}
<div class="about-page">
    <!-- About Hero -->
    <section class="hero-section bg-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 mb-4">Our Commitment to Sustainable Tech</h1>
                    <p class="lead">Extending device lifecycles through responsible commerce</p>
                </div>
                <div class="col-md-6">
                    <img src="https://images.unsplash.com/photo-1552664730-d307ca884978" 
                         alt="Sustainable technology" 
                         class="img-fluid rounded-3 shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Statement -->
    <section class="mission py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="mb-4">Why We Exist</h2>
                    <p class="lead">
                        At Swappa, we believe in making premium technology accessible while reducing 
                        electronic waste. Since 2020, we've helped over 250,000 iPhones find new homes, 
                        preventing tons of e-waste and saving our users millions of dollars.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Our Team</h2>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <img src="https://randomuser.me/api/portraits/men/1.jpg" 
                         class="rounded-circle mb-3" 
                         alt="Team member" 
                         style="width: 150px; height: 150px; object-fit: cover;">
                    <h4>John Smith</h4>
                    <p class="text-muted">CEO & Founder</p>
                </div>
                <!-- Add more team members -->
            </div>
        </div>
    </section>

    <!-- Sustainability Stats -->
    <section class="stats py-5 bg-primary text-white">
        <div class="container">
            <div class="row g-4 text-center">
                <div class="col-md-3">
                    <div class="display-4">250K+</div>
                    <p>Devices Recycled</p>
                </div>
                <div class="col-md-3">
                    <div class="display-4">$40M+</div>
                    <p>Saved by Users</p>
                </div>
                <!-- Add more stats -->
            </div>
        </div>
    </section>
</div>

<style>
    .about-page .hero-section {
        background: linear-gradient(135deg, #F8F9FA 0%, #ffffff 100%);
    }
    
    .stats .display-4 {
        font-weight: 700;
        color: #fff;
    }
    
    .team img {
        border: 3px solid #2A2D72;
    }
</style>
{% endblock %}